<!DOCTYPE html>
<html>
  <head>
    <title>Hypto - BuilderHub</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag asset_path('favicon.png') %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">
          <%= link_to image_tag('hypto-partner-logo.png', width: '94', height: '24'), ui_home_path %>
        </a>
        <div class="collapse navbar-collapse d-flex justify-content-end" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item"><%= link_to 'Profile', '#', class: 'nav-link' %></li>
            <li class="nav-item"><%= link_to 'Logout', ui_logout_path,  method: :delete, class: 'nav-link'%></li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
      <% flash.each do |name, msg| %>
        <% alert_cls = name == 'error' ? 'danger' : name %>
        <div class="alert alert-<%= alert_cls %>"><%= msg.is_a?(String) ? sanitize(msg) : msg %></div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
