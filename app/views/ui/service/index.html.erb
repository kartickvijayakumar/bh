<div class="d-flex mt-4 w-100">
  <div class="card text-center w-100 me-4 mb-4">
    <h5 class="card-header">Welcome to Hypto BuilderHub</h5>
    <div class="card-body">
      <% if Hub.current.github_user_name.present? %>
        <p>Connected to Github (<strong><%= Hub.current.github_user_name %></strong>)
          <%= link_to 'Revoke', revoke_github_ui_service_index_path, method: :delete, class: 'link-danger' %></p>
      <% else %>
        <p class="card-text">Explore our BuilderHub features by connecting to your GitHub account...</p>
        <%= link_to image_tag('github-signin-button.png', class: 'btn-google-signin', width: 200), ui_github_login_path %>
      <% end %>
      <%= link_to 'Back To Dashboard', ui_home_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>
<div class="d-flex mt-4 w-100">
  <div class="card text-center w-100 me-4 mb-4">
    <div class="card-header text-center">
      Create a new service on your GitHub account
    </div>
    <div class="card-body ms-4">
      <%= form_with url: ui_service_index_path, class: 'w-50' do |form| %>
        <div class='form-floating mb-3'>
          <%= form.select :protocol, Service::PROTOCOLS, {}, class: 'form-control' %>
          <%= label_tag :protocol, Service::KEYS.keys[0] %>
        </div>
        <div class='form-floating mb-3'>
          <%= form.select :server_prog_language, Service::SERVER_PROG_LANGUAGES, {}, class: 'form-control' %>
          <%= label_tag :server_prog_language, Service::KEYS.keys[1] %>
        </div>
        <div class='form-floating mb-3'>
          <%= form.select :cloud_provider, Service::CLOUD_PROVIDERS, {}, class: 'form-control' %>
          <%= label_tag :cloud_provider, Service::KEYS.keys[2] %>
        </div>
        <div class='form-floating mb-3'>
          <%= form.select :server_infrastructure, Service::SERVER_INFRASTRUCTURES, {}, class: 'form-control' %>
          <%= label_tag :server_infrastructure, Service::KEYS.keys[3] %>
        </div>
        <div class='form-floating mb-3'>
          <%= form.select :deployment_infrastructure, Service::DEPLOYMENT_INFRASTRUCTURES, {}, class: 'form-control' %>
          <%= label_tag :deployment_infrastructure, Service::KEYS.keys[4] %>
        </div>
        <div class='form-floating mb-3'>
          <%= form.text_field :service_name, class: 'form-control', required: true %>
          <%= label_tag :service_name, 'Service Name' %>
        </div>
        <div class='form-floating mb-3'>
          <%= form.text_field :package_name, class: 'form-control' %>
          <%= label_tag :package_name, 'Package name' %>
        </div>
        <%= submit_tag 'Create', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>

<style type="text/css">
  .accordion-button:not(.collapsed)::after {
    background-image: none;
  }
</style>
